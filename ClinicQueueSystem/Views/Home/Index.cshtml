@{
    /* Home Page - Main landing page for the Local Clinic Queue System
     * Features:
     * - Professional welcome interface for clinic visitors
     * - Clear branding and system identification
     * - Primary call-to-action for admin access
     * - Clean, centered design suitable for public-facing display
     * - Responsive layout for various screen sizes
     * - Bootstrap styling for consistent appearance
     */
    ViewData["Title"] = "Local Clinic Queue System";
}

@* Main content container with full-height centering *@
<div class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="text-center">
        @* Welcome header with large, prominent display *@
        <div class="mb-5">
            <i class="bi bi-hospital text-primary" style="font-size: 5rem;"></i>
        </div>
        
        @* Main system title with Bootstrap display class for impact *@
        <h1 class="display-4 mb-4">Welcome to Local Clinic Queue System</h1>
        
        @* Explanatory subtitle about system purpose and access *@
        <p class="lead mb-4">This system is managed by clinic administrators only.</p>
        
        @* System features overview *@
        <div class="row justify-content-center mb-5">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-body">
                        <h4 class="card-title">System Features</h4>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bi bi-check-circle text-success"></i> Real-time queue management</li>
                            <li class="mb-2"><i class="bi bi-check-circle text-success"></i> Priority-based patient handling</li>
                            <li class="mb-2"><i class="bi bi-check-circle text-success"></i> Live dashboard and reporting</li>
                            <li class="mb-2"><i class="bi bi-check-circle text-success"></i> Emergency patient prioritization</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        
        @* Primary action: Admin login button with prominent styling *@
        <div class="mb-3">
            <a class="btn btn-primary btn-lg px-5" asp-controller="Admin" asp-action="Login">
                <i class="bi bi-person-check"></i> Admin Login
            </a>
        </div>
        
        @* Secondary action: View live queue for patients *@
        <div>
            <a class="btn btn-outline-secondary" asp-controller="Patient" asp-action="Index">
                <i class="bi bi-list-ul"></i> View Live Queue
            </a>
        </div>
    </div>
</div>
