@model ClinicQueueSystem.Models.Patient

@{
    ViewBag.Title = "Register Patient";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">üìù Register New Patient</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-controller="Admin" asp-action="RegisterPatient" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="name" class="form-label">
                                        <i class="fas fa-user"></i> Patient Name
                                    </label>                                    <input asp-for="Name" class="form-control form-control-lg" 
                                           placeholder="Enter patient's full name" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="age" class="form-label">
                                        <i class="fas fa-calendar-alt"></i> Age
                                    </label>                                    <input asp-for="Age" type="number" class="form-control form-control-lg" 
                                           placeholder="Enter patient's age" min="1" max="120" required />
                                </div>
                            </div>                        </div>
                        
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group form-check mb-3">                                    <input asp-for="IsEmergency" type="checkbox" class="form-check-input" />
                                    <label asp-for="IsEmergency" class="form-check-label">
                                        <i class="fas fa-exclamation-triangle text-danger"></i> 
                                        <strong>Emergency Case</strong>
                                        <small class="text-muted d-block">Emergency patients will be automatically served</small>
                                    </label>
                                </div>                                <div class="form-group form-check mb-3">
                                    <input id="serveImmediately" name="serveImmediately" type="checkbox" class="form-check-input" value="true" />
                                    <input name="serveImmediately" type="hidden" value="false" />
                                    <label for="serveImmediately" class="form-check-label">
                                        <i class="fas fa-user-check text-success"></i> 
                                        <strong>Serve Immediately</strong>
                                        <small class="text-muted d-block">Mark this patient as already served</small>
                                    </label>
                                </div>
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle"></i>
                                    <strong>Auto-Serve Rules:</strong>
                                    <ul class="mb-0 mt-2">
                                        <li>Emergency patients are automatically served</li>
                                        <li>Patients 65+ years old are automatically served</li>
                                        <li>You can manually mark any patient to be served immediately</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Dashboard" class="btn btn-secondary btn-lg me-md-2">
                                <i class="fas fa-arrow-left"></i> Back to Dashboard
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-user-plus"></i> Register Patient
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
